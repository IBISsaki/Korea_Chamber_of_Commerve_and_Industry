#include <stdio.h>
#include <stdlib.h>

struct node
{
    int data;
    struct node *next;
};

struct node *ptr;
ptr = malloc(sizeof(struct node));                      ptr : |*|
ptr -> data = 1;                                        ptr : |*| -> |1||
ptr -> next = malloc(sizeof(struct node));              ptr : |*| -> |1|*| ->
ptr -> next -> data = 3;                                ptr : |*| -> |1|*| -> |3||
ptr -> next -> next = malloc(sizeof(strcut node));      ptr : |*| -> |1|*| -> |3|*| ->
ptr -> next -> next -> data = 4;                        ptr : |*| -> |1|*| -> |3|*| -> |4||
ptr -> next -> next -> next = NULL;                     ptr : |*| -> |1|*| -> |3|*| -> |4|NULL|